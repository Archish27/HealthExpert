<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/viewA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:padding="16dp"
            android:src="@mipmap/ic_launcher"
            android:textColor="@color/colorPrimary"
            tools:civ_border_color="@color/colorPrimaryDark"
            tools:civ_border_width="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.healthexpert.ui.widgets.BaseTextView
                android:id="@+id/tvFullName"
                style="@style/PrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Archish Thakkar"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.healthexpert.ui.widgets.BaseTextView
                android:id="@+id/tvAddress"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mumbai - 440009" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.healthexpert.ui.widgets.BaseTextView
                    style="@style/PrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/height" />

                <com.healthexpert.ui.widgets.BaseTextView
                    android:id="@+id/tvHeight"
                    style="@style/SecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.5 inch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.healthexpert.ui.widgets.BaseTextView
                    style="@style/PrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight" />

                <com.healthexpert.ui.widgets.BaseTextView
                    android:id="@+id/tvWeight"
                    style="@style/SecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="55 kgs" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.healthexpert.ui.widgets.BaseTextView
                    style="@style/PrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/occupation" />

                <com.healthexpert.ui.widgets.BaseTextView
                    android:id="@+id/tvOccupation"
                    style="@style/SecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.healthexpert.ui.widgets.BaseTextView
                    style="@style/PrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_no" />

                <com.healthexpert.ui.widgets.BaseTextView
                    android:id="@+id/tvPhoneno"
                    style="@style/SecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7709900983" />
            </LinearLayout>
        </LinearLayout>

        <com.healthexpert.ui.widgets.BaseTextView
            style="@style/PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history" />

        <com.healthexpert.ui.widgets.BaseTextView
            android:id="@+id/tvHistory"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back Problems" />

        <com.healthexpert.ui.widgets.BaseTextView
            style="@style/PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/investigations" />

        <com.healthexpert.ui.widgets.BaseTextView
            android:id="@+id/tvInvestigations"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due to over access work" />

        <com.healthexpert.ui.widgets.BaseTextView
            style="@style/PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mother_name" />

        <com.healthexpert.ui.widgets.BaseTextView
            android:id="@+id/tvMname"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bhavana Thakkar" />

        <com.healthexpert.ui.widgets.BaseTextView
            style="@style/PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mother_s_symptom" />

        <com.healthexpert.ui.widgets.BaseTextView
            android:id="@+id/tvMSymptoms"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Headache, Backache" />

        <com.healthexpert.ui.widgets.BaseTextView
            style="@style/PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/father_s_name" />

        <com.healthexpert.ui.widgets.BaseTextView
            android:id="@+id/tvFname"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.healthexpert.ui.widgets.BaseTextView
            style="@style/PrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/father_s_symptom" />

        <com.healthexpert.ui.widgets.BaseTextView
            android:id="@+id/tvFSymptoms"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>
